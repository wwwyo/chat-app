<div class="comment_info">
  <div class="comment_top">
    <div class="comment_user">
      <%= message.user.name %>
    </div>
    <div class="comment_date">
      <%= l message.created_at %>
    </div>
  </div>  
  <div class="comment">
    <%= message.content %>        
  </div>
   <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</div>